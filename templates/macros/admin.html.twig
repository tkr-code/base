{% macro breadcrumb(pageName,pages) %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">{{pageName|default('Tableau de bord')}}</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Tableau de bord</a>
						</li>
						{% for item in pages %}
							<li class="breadcrumb-item">
								<a href="{{ item.path }}">{{ item.name }}</a>
							</li>
						{% endfor %}
						<li class="breadcrumb-item active">{{ pageName|default('Nom de la page') }}</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->
{% endmacro %}
