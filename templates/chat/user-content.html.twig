{% for item in conversations %}
<a data-emetteur="{{app.user.id}}" data-recepteur="{{item.id}}" href="#" class="list-group-item list-group-item-action border-0 conversation">
	<div class="badge bg-success float-right">0</div>
	<div class="d-flex align-items-start">
		<img src="{{ asset('img/user/' ~ user.personne.avatar|default('empty.png') ) }}" class="rounded-circle mr-1" alt="" width="40" height="40">
		<div class="flex-grow-1 ml-3">
			{{item.personne.fullName}}
			<div class="small">
				<span class="fas fa-circle chat-online"></span>
				Online
			</div>
		</div>
	</div>
</a>
{% endfor %}
