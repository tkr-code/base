{% for item in messages %}
	{% if emetteur  == item.id %}
		<div class="chat-message-left pb-4">
			<div
				class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
				{# <div class="font-weight-bold mb-1">{{ user.personne.fullName }}</div> #}
				{{ item.message}}
				<div class="text-muted small text-nowrap mt-2 float-right ml-2">
					{{item.created_at|date('H:m:i')}}
				</div>
			</div>
		</div>
	{% else %}
		<div class="chat-message-right mb-4">
			<div class="flex-shrink-1 bg-light rounded py-2 px-3 mr-3">
				<div class="font-weight-bold mb-1">{{'You'|trans}}</div>
				{{item.message}}
				<div class="text-muted small text-nowrap mt-2 float-right ml-2">
					{{item.created_at|date('H:m:i')}}
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}
