{% extends 'admin/base.html.twig' %} {% block title %}New message{% endblock %} 
{% import "macros/link.html.twig" as links %}
{% block body %}
<div class="card card-outline card-primary">
    <h4 class="card-header">Nouveau message</h4>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-12">
                {{ form_start(form) }} {{ form_widget(form) }}
                {{ links.back(path('profile_index'),"back to message") }}
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button> 
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}