{% extends "admin/base.html.twig" %}
{% import "macros/breadcrumb.html.twig" as utils %}

{% block title %}Edit user password{% endblock %}

{% block breadcrumb %}
    {{ utils.breadcrumb('Modifier le mot de passe',[
        {
            path:path('profile_index'),
            name:'Profile'
        }
    ])}}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-6 mx-auto col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <div class="card-title">
                    Modifier le mot de passe
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {% include "includes/_form_save.html.twig" with {path: path('profile_index') } %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function(){
        $('#profile a').addClass('active')
    })
</script>
{% endblock %}