{% block javascripts %}
<script>
	$(document).ready(function () {
		function loadPhoneList() {
			$.ajax({
				url: '/main/load-phone-list',
				method: 'POST',
				type: 'json',
				beforeSend: function () {
					$('.js-loader-text').text('Actualisation en cour ...')
					$('.js-loader').css('display', 'flex')
				},
				success: function (data) {
					$('.js-loader').css('display', 'none')
					$('#load-phone-list').html(data.content)
				}
			})

		}

		// Supprimer un numéro de téléphone
		$(document).on('click', '.btn-delete-phone', function (e) {
			e.preventDefault()
			let href = $(this).attr('href')
			let token = $(this).attr('token')
			Swal.fire({
				title: 'Etes vous sûr?',
				text: "Vous etes sur le point de supprimmer un numéro !  ",
				icon: 'question',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				cancelButtonText: 'Fermer',
				confirmButtonText: 'Oui, je confirme!'
			}).then((result) => {
				if (result.isConfirmed) {
					$.ajax({
						url: href,
						method: 'POST',
						type: 'json',
						data: {
							_token: token
						},
						beforeSend: function () {
							$('.js-loader-text').text('Suppression en cour ...')
							$('.js-loader').css('display', 'flex')
						},
						success: function (data) {
							$('.js-loader').css('display', 'none')
							if (data) {
								loadPhoneList()
								Swal.fire({
									icon: 'success',
									title: 'Le numéro a été supprimé',
									showConfirmButton: false,
									timer: 1500
								})
							} else {
								alert('Une erreur est survenu.')
							}

						},
						error: function () {
							$('.js-loader').css('display', 'none')
							alert('ok')
						}
					})
				}
			})
			$('#help-tel-phone').text('')
		})

		// Modifier une numéro de téléphone
		$(document).on('click', '#btn-Modifier-phone', function (e) {
			e.preventDefault()
			let numero = $('#tel-phone').val()
			let token = $(this).attr('token')
			let id = $(this).data('id')
			let isWhatsapp = $('#isWhatsapp').is(':checked') ? 'Oui' : 'Non'
			$.ajax({
				url: '/main/phone/' + id + '/edit',
				method: 'POST',
				type: 'text',
				data: {
					valeur: numero,
					_token: token,
					isWhatsapp: isWhatsapp
				},
				beforeSend: function () {
					$('.js-loader-text').text('Verifiaction en cour ...')
					$('.js-loader').css('display', 'flex')
				},
				success: function (data) {
					$('.js-loader').css('display', 'none')
					if (data.reponse) {
						loadPhoneList()
						Swal.fire({
							icon: 'success',
							title: 'Le numéro a été modifié',
							showConfirmButton: false,
							timer: 1500
						})
						$('#modal-default').modal('hide')
						$('#modal-default .modal-body').html('')
						$('#modal-default .modal-title').html('')
					} else {
						if (data.error == 2) {
							let error_text = 'Ce numéro existe !'
							Swal.fire({
								icon: 'warning',
								title: 'Oups',
								text: error_text,
								showConfirmButton: false,
								timer: 1500
							})
							$('#help-tel-phone').text(error_text)
						} else {
							$('#help-tel-phone').text('')
							alert('Une erreur est survenu')
						}
					}
				},
				error: function () {
					$('#help-tel-phone').text('')
					alert('Une erreur est survenu')
					$('.js-loader').css('display', 'none')
					alert('Erreur 1')
				}
			})
		})

		// open modal add
		$(document).on('click', '#modal-add-phone', function () {
			$('#modal-default').modal('show')
			let body = '<div class="form-group">' + '<input id="tel-phone" type="text" placeholder="Entrer le numero" class="form-control phone">' + '<small id="help-tel-phone" class="text-danger"></small></div>' + '<div class="form-group">' + '<label>Numero whatsapp ?</label> ' + '<input type="checkbox" id="isWhatsapp"></div>' + '<button id="btn-add-phone" token="  {{ csrf_token("add-phone-item") }}" class="btn btn-primary">Ajouter</button>'
			$('#modal-default .modal-title').html('Ajouter un numéro')
			$('#modal-default .modal-body').html(body)

		})
		// open modal edit
		$(document).on('click', '.modal-Modifier-phone', function (e) {
			e.preventDefault()
			let href = $(this).attr('href')
			$('#modal-default').modal('show')

			$.ajax({
				url: href,
				method: 'POST',
				beforeSend: function () {
					$('.modal-loader').css('display', 'flex')
				},
				success: function (data) {
					$('#modal-default .modal-title').html('Modifier un numéro')
					$('#modal-default .modal-body').html(data.content)
					$('.modal-loader').css('display', 'none')
				}
			})

		})

		// Ajouter une numéro de téléphone
		$(document).on('click', '#btn-add-phone', function (e) {
			e.preventDefault()
			let numero = $('#tel-phone').val()
			let token = $(this).attr('token')
			let isWhatsapp = $('#isWhatsapp').is(':checked') ? 'Oui' : 'Non'
			if (numero.length < 8) {
				$('#help-tel-phone').text('Numéro invalide')
				return
			}
			$.ajax({
				url: '/main/phone/new',
				method: 'POST',
				type: 'text',
				data: {
					valeur: numero,
					_token: token,
					isWhatsapp: isWhatsapp
				},
				beforeSend: function () {
					$('.modal-loader').css('display', 'flex')
					$('.js-loader-text').text('Verifiaction en cour ...')
					$('.js-loader').css('display', 'flex')
				},
				success: function (data) {
					if (data.reponse) {
						loadPhoneList()
						Swal.fire({
							icon: 'success',
							title: 'Le numéro a été ajouté',
							showConfirmButton: false,
							timer: 1500
						})
						$('#modal-default').modal('hide')
						$('#modal-default .modal-body').html('')
						$('#modal-default .modal-title').html('')
					} else {
						if (data.error == 2) {
							let error_text = 'Ce numéro existe !'
							Swal.fire({
								icon: 'warning',
								title: 'Oups',
								text: error_text,
								showConfirmButton: false,
								timer: 1500
							})
							$('#help-tel-phone').text(error_text)
						} else {
							$('#help-tel-phone').text('')
							alert('Une erreur est survenu')
						}
					}
					$('.modal-loader').css('display', 'none')
				},
				error: function () {
					$('#help-tel-phone').text('')
					alert('Une erreur est survenu')
					$('.js-loader').css('display', 'none')
					alert('Erreur 1')
				}
			})
		})

		// delete account start
		$(document).on('click', '#btn-delete-account', function () {
			Swal.fire({
				title: 'Etes vous sûr?',
				text: "Vous etes sur le point d'envoyer un email de suppresion de compte !  ",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				cancelButtonText: 'Fermer',
				confirmButtonText: 'Oui, je confirme!'
			}).then((result) => {
				if (result.isConfirmed) { // ajax
					$.ajax({
						url: "{{ path('send_delete_account') }}",
						method: "POST",
						dataType: 'json',
						data: {},
						beforeSend: function () {
							$('.loader-delete-account').css('display', 'initial')
							$('#btn-delete-account').css('display', 'none')
						},
						success: function (data) {

							if (data == 'success') {
								$('.alert-delete-account').css('display', 'initial')
								Swal.fire({
									icon: 'success',
									title: 'Your work has been saved',
									showConfirmButton: false,
									timer: 1500
								})
							} else {
								Swal.fire({
									icon: 'warning',
									title: 'Une érreur a été detecté',
									text: "Veillez le notifier a un administraeur !",
									showConfirmButton: false,
									timer: 1500
								})

							}
							$('.loader-delete-account').css('display', 'none')
							$('#btn-delete-account').css('display', 'initial')
						}
					})
					// ./ajax end
				}
			})
		})
		// delete account end


		// send email start
		$(document).on('click', '#btn-edit-email', function () {
			Swal.fire({
				title: 'Etes vous sûr?',
				text: "Vous etes sur le point d'envoyer un email de modification d'email ! ",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				cancelButtonText: 'Fermer',
				confirmButtonText: 'Oui, je confirme!'
			}).then((result) => {
				if (result.isConfirmed) { // ajax
					$.ajax({
						url: "{{ path('send_edit_email') }}",
						method: "POST",
						dataType: 'json',
						data: {},
						beforeSend: function () {
							$('.loader-edit-email').css('display', 'initial')
							$('#btn-edit-email').css('display', 'none')
						},
						success: function (data) {
							if (data == 'success') { } else {
								Swal.fire({
									icon: 'success',
									title: 'Your work has been saved',
									showConfirmButton: false,
									timer: 1500
								})
							}
							$('.loader-edit-email').css('display', 'none')
							$('#btn-edit-email').css('display', 'initial')
							$('.alert-edit-email').css('display', 'initial')
						}
					})
					// ./ajax end
				}
			})
		})
		/*******lire une image avant insertion *********/
		function previewFile(input) {
			if (input.files && input.files[0]) {
				var reader = new FileReader();
				reader.onload = function (e) {
					$('#show_preview + img').remove();
					$('#show_preview').html('<img class="profile-user-img img-fluid img-circle" src="' + e.target.result + '" />');
				}
				reader.readAsDataURL(input.files[0]);
			}
		}
		$("#profile_avatar").change(function () {
			previewFile(this);
		})
	})
</script>
{% endblock %}