{% import "macros/admin.html.twig" as admin %}
{% import "macros/link.html.twig" as link %}

{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une Option{% endblock %}
{% block breadcrumb %}
	{{ admin.breadcrumb('Modifier une option',[
        {
            path:path('app_admin_options_index'),
            name:'Gestion des options'|trans
        }
    ])}}
{% endblock %}
{% block body %}
    <div class="card card-outline card-primary">
    <div class="card-header">Modifier une Option</div>
        <div class="card-body">
            {{ include('admin/options/_form.html.twig', {'button_label': 'Update'}) }}
    {{ include('admin/options/_delete_form.html.twig') }}
        </div>
    </div>

    {{ link.back(path('app_admin_options_index')) }}

{% endblock %}
