{% import "macros/admin.html.twig" as admin %}
{% import "macros/link.html.twig" as link %}
{% extends 'admin/base.html.twig' %}

{% block title %}Affichier une Option{% endblock %}

{% block breadcrumb %}
	{{ admin.breadcrumb('Affichier une option',[
        {
            path:path('app_admin_options_index'),
            name:'Gestion options'
        }
    ])}}
{% endblock %}
{% block body %}
<div class="card card-outline card-primary">
    <div class="card-header">Afficher une option</div>
    <div class="card-body">
        {{ link.btnEdit(path('app_admin_options_edit', {'id': option.id})) }}
        {{ include('admin/options/_delete_form.html.twig') }}
        <hr>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ option.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ option.name }}</td>
                </tr>
                <tr>
                    <th>Value</th>
                    <td>{{ option.value }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ option.label }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

    {{ link.back(path('app_admin_options_index')) }}


{% endblock %}
