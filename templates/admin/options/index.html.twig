{% import "macros/breadcrumb.html.twig" as breadcrumbs %}
{% import "macros/link.html.twig" as link %}
{% import "macros/dataTable.html.twig" as dataTable %}

{% extends 'admin/base.html.twig' %}

{% block head %}
	{{ dataTable.css() }}
{% endblock %}

{% block foot %}
	{{ dataTable.js() }}
{% endblock %}

{% block javascripts %}
	{{ dataTable.script('#table-1') }}
{% endblock %}

{% block breadcrumb %}
	{{ breadcrumbs.breadcrumb('Manage options',[])}}
{% endblock %}

{% block title %}
	{{'Options index'|trans}}
{% endblock %}

{% block body %}
	{% include "includes/_alerte.html.twig" %}
	<div class="card card-outline card-primary">
		<div class="card-body">
			<h1>Options index</h1>
			<table id="table-1" class="table table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>{{'Name'|trans}}</th>
						<th>{{'Value'|trans}}</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for option in options %}
						<tr>
							<td>{{ option.id }}</td>
							<td>{{ option.label }}</td>
							<td>{{ option.value }}</td>
							<td>
								{{ link.pencil(path('app_admin_options_edit', {'id': option.id})) }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">{{'no records found'|trans}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

    {{ link.back(path('admin'), 'back to dashboard'|trans) }}

{% endblock %}
