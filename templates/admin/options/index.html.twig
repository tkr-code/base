{% extends "admin/base.html.twig" %}

{% block title %} Options index {% endblock %}
{% block body %}
    <h1>Options index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.name }}</td>
                <td>{{ option.value }}</td>
                <td>
                    <a href="{{ path('app_admin_options_show', {'id': option.id}) }}">show</a>
                    <a href="{{ path('app_admin_options_edit', {'id': option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_options_new') }}">Create new</a>
{% endblock %}
