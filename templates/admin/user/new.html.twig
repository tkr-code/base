{% import "macros/breadcrumb.html.twig" as utils %}
{% import "macros/link.html.twig" as links %}

{% extends 'admin/base.html.twig' %}

{% block breadcrumb %}
{{ utils.breadcrumb('Create New User',[
{
path:path('user_index'),
name:'Manage users'
}
])}}
{% endblock %}

{% block title %}New User{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3>Create new User</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group col-12 col-md-6">
                        {{ form_row(form.roles)}}
                    </div>
                    <div class="form-group col-12 col-md-6">
                        {{ form_row(form.email)}}
                    </div>
                    <div class="form-group col-12 col-md-6">
                        {{ form_row(form.personne.LastName)}}
                    </div>
                    <div class="form-group col-12 col-md-6">
                        {{ form_row(form.personne.FirstName)}}
                    </div>
                    {# <div class="form-group col-12 col-md-4">
                        {{ form_row(form.adresse.rue)}}
                    </div>
                    <div class="form-group col-12 col-md-4">
                        {{ form_row(form.adresse.ville)}}
                    </div>
                    <div class="form-group col-12 col-md-4">
                        {{ form_row(form.adresse.pays)}}
                    </div> #}
                </div>
                {{ form_widget(form) }}
                {{ links.back(path('user_index'),"back to list") }}
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}