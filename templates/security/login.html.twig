{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container mt-5">
<div class="row">

<div class="col-md-5">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary my-2" type="submit">
        Sign in
    </button>
</form>
</div>
<div class="col-md-7">
            <table class="table">
                <thead>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Action</th>
                </thead>
                <tbody>
                {% for item in users %}
                    <tr>
                        <td>{{ item.email }}</td>
                            <td>
                        {% for item in item.roles %}
                         {% if item == 'ROLE_ADMIN' %}
                            Administrateur</td>
                         {% elseif item == 'ROLE_EDITOR' %}
                            Editeur
                            {% elseif item == 'ROLE_USER' %}
                            Utilsateur
                         {% endif %}
                        {% endfor %}
                            </td>
                        <td>password</td>
                        <td>
                             <form method="post">
                             <input type="hidden" value="{{ item.email }}" name="email"  class="form-control"
                    autocomplete="hidden" required autofocus>
                                <input type="hidden" name="password" class="form-control" value="password"
                                autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button class="btn btn-success">Se connecter</button>
                             </form>
                            
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
</div>
</div>

{% endblock %}
