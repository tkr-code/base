{% import "macros/navs.html.twig" as nav %}
<!doctype html>
<html lang="{{ app.request.locale}}">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}">
  <!-- font-awesome -->
  <link rel="stylesheet" href="{{ asset('vendor/fontawesome-free/css/all.min.css') }}">
  <!-- favicon -->
  <link rel="shortcut icon" href="{{ asset('img/AdminLTELogo.png') }}" type="image/x-icon">
  <title>{% block title %}{% endblock %} | {{ app_name }}</title>
  {% block head %}{% endblock %}
  {{ encore_entry_link_tags('app') }}
  {% block stylesheets  %}
  {% endblock %}
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">{{ app_name }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('contact') }}">Contact </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Login</a>
        </li>
        {% if app.user %}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Admin
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a>
            <a class="dropdown-item" href="{{ path('profile_index') }}">Profil</a>
            <a class="dropdown-item" href="{{ path('admin_chat_index') }}">Chat</a>
          </div>
        </li>
        {% endif %}
          {% include "includes/_lang.html.twig" %}
      </ul>
    </div>
  </nav>
  {% block body %}{% endblock %}
  {% block footer %}{% endblock %}
  <script src="{{ asset('vendor/jquery/jquery.slim.min.js') }}"></script>
   <script src="{{ asset('vendor/bootstrap/js/bootstrap.js') }}"></script>
  {% block foot %}{% endblock %}
  {{ encore_entry_script_tags('app') }}
  <script>
    $(document).ready(function(){
      $("body").css('background','red')

    })
    // window.addEventListener('load',function(){
		// })
  </script>
  {% block javascripts %}
  {% endblock %}
</body>

</html>